<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Poster">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="NewsDetailsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/news_details_title</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="NameText" parent="NewsDetailsTitle">
        <item name="android:textSize">@dimen/news_details_text</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:freezesText">true</item>
    </style>


</resources>
